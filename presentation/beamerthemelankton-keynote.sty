\DeclareOptionBeamer{compress}{\beamer@compresstrue}
\ProcessOptionsBeamer

\mode<presentation>

%% keynote scheme
\usepackage{hyperref}
\usepackage{color}
\usepackage{texnansi}
\usepackage{marvosym}

\renewcommand\sfdefault{phv}
\renewcommand\familydefault{\sfdefault}

\usetheme{Frankfurt} % Dresden
\useoutertheme{default}

\definecolor{bottomcolour}{rgb}{0.32,0.3,0.38}
\definecolor{middlecolour}{rgb}{0.08,0.08,0.16}

\setbeamercolor{structure}{fg=gray}
\setbeamercolor{normal text}{bg=black, fg=white}

\setbeamerfont{title}{size=\Huge}
\setbeamerfont{frametitle}{size=\huge}

\setbeamertemplate{frametitle}[default]%[center]
\setbeamertemplate{background canvas}[vertical shading]
[bottom=bottomcolour, middle=middlecolour, top=black]
\setbeamertemplate{navigation symbols}{} %no nav symbols

% toc bullets
\setbeamertemplate{sections/subsections in toc}[square]

% bullets
\setbeamertemplate{itemize item}[triangle]
\setbeamertemplate{itemize subitem}{$\rhd$}
\setbeamertemplate{enumerate items}[square]

% blocks
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[rounded=false,shadow=false, leftskip=.75ex, colsep*=.75ex]{block
title}%
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=false,shadow=false,colsep*=.75ex,sep=.75ex,vmode]{block
body}%
    \ifbeamercolorempty[fg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
} 

\mode
<all>

